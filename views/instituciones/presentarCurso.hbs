                <div id="divDatosGrupo" class="divSubformulario">
                    <b><label class="lblCaptura">Grupo:</label></b>
                    <input id="inpNombreGrupo" class="w3-input w3-round" type="text" name="nombreGrupo"></input>
                    <br>
                    <b><label class="lblCaptura" >CÃ³digo:</label></b>
                    <input id="inpIdentificacionGrupo" class="w3-input w3-round" type="text" name="identificacionGrupo"></input>
                </div>
                <div id="divGrabarGrupo" class="divSubformulario">
                    <button id="btnGrabarGrupo" type="submit" class="w3-button w3-round btnControl">Grabar grupo</button>
                </div>
            </form>
        </div>
    </div>
</div>

