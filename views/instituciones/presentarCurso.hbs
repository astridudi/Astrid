        <label id="lblNombreCurso" class="lblPresentacion"></label>
        <label id="lblIdentificacionCurso" class="lblMenor"></label><br>
        <div id="divPresentacionDocentes" class="divListado">
            <label id="lblDocentes" class="lblPresentacionEnumeracion">Docentes</label><br>
        </div>
        <div id="divPresentacionGrupos" class="divListado">
            <label id="lblGrupos" class="lblPresentacionEnumeracion">Grupos</label><br>
