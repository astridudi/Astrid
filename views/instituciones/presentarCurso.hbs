            <button id="btnEditarGrupo" class="w3-button w3-round btnAdvertir">Editar grupo</button>
            <button id="btnEliminarGrupo" class="w3-button w3-round btnDesistir">Eliminar grupo</button>
            <input id="inpPaso" name="idPaso" type="hidden" value="">
        </div>
        <div id="divFormularioGrupo" class="divFormulario">
            <form id="formGrupo" method="POST" action="/main/grabarGrupo">
                <input id="nombreUsuario" name="nombreUsuario" type="hidden" value={{nombreUsuario}}>
                <input id="inpIdCurso" name="idCurso" type="hidden" value={{curso.id}}>
